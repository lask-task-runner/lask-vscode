{
  "name": "vscode-lask",
  "displayName": "Lask",
  "description": "Lask language support for Visual Studio Code",
  "publisher": "ToruIkeda",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lask-task-runner/lask-vscode.git"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:lask"
  ],
  "contributes": {
    "commands": [
      {
        "title": "Restart Language Server",
        "category": "Lask",
        "command": "lask.restartLanguageServer"
      }
    ],
    "languages": [
      {
        "id": "lask",
        "aliases": [
          "Lask",
          "lask"
        ],
        "extensions": [
          ".lask"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "vscode-lask",
      "properties": {
        "vscode-lask.executablePath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to `lask` executable"
        },
        "vscode-lask.lask.inlayHints": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable inlay hints"
        }
      }
    }
  },
  "scripts": {
    "vscode:publish": "vsce publish",
    "vscode:prepublish": "npm run package",
    "vscode:package": "vsce package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  },
  "devDependencies": {
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "@vscode/vsce": "^2.21.1"
  }
}